<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/bg_transparent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_back_white"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp" />
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="3dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="10dp">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:tabStripEnabled="false"
            app:tabIconTint="@color/colorPrimaryDark"
            app:tabIconTintMode="screen">
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:icon="@drawable/tab_case_request"
                />
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:icon="@drawable/tab_case_check"/>
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:icon="@drawable/tab_case_payment"/>
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:icon="@drawable/tab_case_delivery"/>
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:icon="@drawable/tab_case_repair"/>
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:icon="@drawable/tab_case_review"/>
        </com.google.android.material.tabs.TabLayout>
    </androidx.cardview.widget.CardView>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>