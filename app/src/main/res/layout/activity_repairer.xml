<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/colorLightGray"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_gray"
            android:background="@drawable/bg_transparent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"/>
        <ImageButton
            android:id="@+id/button_keep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_heart_repairer"
            android:background="@drawable/bg_transparent"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="25dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center|bottom"
            android:src="@drawable/ic_person"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="5dp" />
    </FrameLayout>
    <TextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="김엠제이"
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginVertical="10dp"/>
    <TextView
        android:id="@+id/text_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="완료 43 | 평점 4.2 | 견적 응답 1일"
        android:textSize="10dp"
        android:textColor="@color/colorDarkGray"/>
    <android.widget.Button
        android:id="@+id/button_request"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="견적 요청"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/btn_blue"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_no_sample"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="15dp"
                android:text="샘플이 없습니다."
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_sample"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="15dp"
                    card_view:cardElevation="1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="명장 정보"
                            android:textSize="15dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:text="전문 분야"
                            android:textSize="12dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/text_service"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:text="핸드백, 지갑"
                            android:textSize="12dp"
                            android:textColor="@color/colorPrimaryDark" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:text="명장 소개"
                            android:textSize="12dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/text_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="계롱산에서 가방 10년, 금강산에서 하이힐 20년을 수련하고 20년 전부터 성수동을 접수한 가방의 달인 37세 김엠제이입니다 :)"
                            android:textSize="12dp"
                            android:textColor="@color/colorPrimaryDark" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="15dp"
                    card_view:cardElevation="1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="리뷰 블럭"
                            android:textSize="15dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tag1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="5dp"
                                android:layout_marginEnd="7dp"
                                android:text="그때 그때 바로 연락주세요!"
                                android:background="@drawable/edge"
                                android:layout_marginBottom="10dp"/>
                            <TextView
                                android:id="@+id/tag2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="5dp"
                                android:text="전체적으로 만족스러워요"
                                android:background="@drawable/edge"
                                android:layout_marginBottom="10dp"/>
                            <TextView
                                android:id="@+id/tag3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="5dp"
                                android:layout_marginEnd="7dp"
                                android:text="조금 비싸요"
                                android:background="@drawable/edge"
                                android:layout_marginBottom="10dp"/>
                            <TextView
                                android:id="@+id/tag4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="5dp"
                                android:text="또 맡기고 싶어요 추천해요!"
                                android:background="@drawable/edge"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="15dp"
                    card_view:cardElevation="1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="최근 댓글"
                            android:textSize="15dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/list_review"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>