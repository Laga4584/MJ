<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_chat_profile_other"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="7.5dp"
        android:layout_marginLeft="21dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/text_chat_user_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.5dp"
        android:layout_marginLeft="56dp"
        android:text="명장"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#727272"/>

    <ImageView
        android:id="@+id/image_received_message"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="62.17dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7.5dp"
        android:background="@drawable/round_gray_chat"
        android:maxWidth="240dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_chat_user_other"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text_received_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toRightOf="@+id/image_received_message"
        app:layout_constraintBottom_toBottomOf="@+id/image_received_message"
        android:text="TextView"
        android:textSize="10sp" />
</androidx.constraintlayout.widget.ConstraintLayout>