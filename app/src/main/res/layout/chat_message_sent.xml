<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/message_tail_blue"
        android:layout_width="11dp"
        android:layout_height="12dp"
        android:layout_marginTop="7.5dp"
        android:layout_marginRight="18.83dp"
        android:src="@drawable/ic_message_tail_blue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_sent_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.5dp"
        android:layout_marginBottom="7.5dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/round_blue_chat"
        android:maxWidth="240dp"
        android:paddingLeft="9dp"
        android:paddingTop="8dp"
        android:paddingRight="11dp"
        android:paddingBottom="8dp"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="14dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_sent_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:text="TextView"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_sent_message_body"
        app:layout_constraintRight_toLeftOf="@+id/text_sent_message_body" />
</androidx.constraintlayout.widget.ConstraintLayout>