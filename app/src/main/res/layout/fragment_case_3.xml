<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    android:backgroundTint="#ffe812"
    android:foreground="@drawable/shape_card_dash_fg"
    app:cardCornerRadius="10dp"
    android:elevation="3dp"
    app:contentPadding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_kakao"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/text_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="end"
            android:text="신용카드  KB국민"
            android:textSize="12dp"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="end"
            android:gravity="end"
            android:text="김엠제이 명장 [발렌시아가] 핸드백 스트링 수선 외 1건"
            android:textSize="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textIsSelectable="false"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/text_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="end"
            android:text="50,120원/무이자 6개월"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
<TextView
    android:id="@+id/description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:text="결제 내용을 확인하고 다음을 눌러주세요"
    android:textSize="11dp"
    android:textColor="@color/colorPrimaryDark"
    android:gravity="center"/>
<View
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"/>
<TextView
    android:id="@+id/button_next"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_gravity="bottom"
    android:gravity="center"
    android:text="결제 내용 이상 없어요"
    android:textSize="15dp"
    android:textColor="@color/colorPrimary"
    android:background="@color/colorAccent"
    android:paddingTop="20dp"
    android:paddingBottom="30dp"/>
</LinearLayout>

